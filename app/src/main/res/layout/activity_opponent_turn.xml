<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/opponent_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvRound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="8dp"
            android:text="Round 1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opponent's Turn"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Your Left Hand:" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <ImageButton
                android:id="@+id/btnLeftFist"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/hand_fist_left"
                android:background="@null"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/btnLeftOpen"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/hand_open_left"
                android:background="@null"
                android:scaleType="fitCenter"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Your Right Hand:" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnRightFist"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/hand_fist_right"
                android:background="@null"
                android:scaleType="fitCenter"/>

            <ImageButton
                android:id="@+id/btnRightOpen"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/hand_open_right"
                android:background="@null"
                android:scaleType="fitCenter"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnSubmitOpponent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</ScrollView>